<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zyt.lxwm.LXWMActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:background="@color/navigationBar"
        android:id="@+id/relativeLayout10" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="联系我们"
            android:id="@+id/textView64"
            android:textSize="24dp"
            android:textColor="#fff"
            android:layout_centerInParent="true" />

        <RelativeLayout
            android:id="@+id/backBtn"
            android:layout_width="50dp"
            android:layout_height="50dp">
            <ImageView
                android:layout_width="12dp"
                android:layout_height="21dp"
                android:layout_centerVertical="true"
                android:src="@drawable/back"
                android:layout_marginLeft="10dp" />
        </RelativeLayout>

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff">
        <RelativeLayout
            android:layout_weight="1"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/relativeLayout10"
            android:gravity="center_horizontal"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="35dp"
                android:id="@+id/androidImg"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_marginTop="12dp"
                android:text="非IOS版本下载"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/androidText"
                android:layout_below="@+id/androidImg"
                android:layout_centerHorizontal="true" />

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="35dp"
                android:id="@+id/iosImg"
                android:layout_below="@+id/androidText"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_marginTop="12dp"
                android:text="IOS版本下载"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/iosText"
                android:layout_below="@+id/iosImg"
                android:layout_centerHorizontal="true" />

            <TextView
                android:text="联系地址：珠海市横琴新区宝华路6号105室"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/address"
                android:layout_below="@+id/iosText"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="60dp" />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="15dp"
                android:id="@+id/tellayout"
                android:layout_below="@+id/address"
                android:layout_centerHorizontal="true">
                <TextView
                    android:text="联系电话："
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="0756-7680060 13532288688"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tel" />
            </LinearLayout>

            <TextView
                android:text="珠海合赢融通投资有限公司 版权所有 Copyright ©2016-2016"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:id="@+id/copyright"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                android:layout_below="@+id/tellayout" />
        </RelativeLayout>
    </ScrollView>
</LinearLayout>
