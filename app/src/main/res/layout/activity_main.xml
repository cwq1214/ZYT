<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:padding="0dp"
    android:orientation="vertical"
    android:background="#f9f9f9">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:background="@color/navigationBar"
        android:id="@+id/relativeLayout">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="房秘书"
                android:textSize="17dp"
                android:textColor="#fff"
                android:layout_marginLeft="6dp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="登出"
            android:id="@+id/logoutBtn"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:textColor="#fff"
            android:textSize="17dp"
            android:gravity="center" />

        <LinearLayout
            android:id="@+id/btn_sel_location"
            android:layout_marginLeft="13dp"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/text_currentLocation"
                android:textSize="17dp"
                android:textColor="#FFFFFF"
                android:text="广州"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:src="@drawable/arrow_down_white"
                android:layout_marginLeft="7dp"
                android:layout_width="7dp"
                android:layout_height="4dp" />
        </LinearLayout>

    </RelativeLayout>

    <com.youth.banner.Banner
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="130dp">

    </com.youth.banner.Banner>

    <android.support.v7.widget.GridLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:columnCount="3"
        >
        
        <LinearLayout
            android:id="@+id/btn_spjsq"
            app:layout_columnWeight="1"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <ImageView
                android:src="@drawable/icon_spjsq"
                android:layout_width="88dp"
                android:layout_height="88dp" />
            <TextView
                style="@style/mainTabText"
                android:text="商铺计税器"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/btn_zzjsq"
            app:layout_columnWeight="1"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <ImageView
                android:src="@drawable/icon_zzjsq"
                android:layout_width="88dp"
                android:layout_height="88dp" />
            <TextView
                style="@style/mainTabText"
                android:text="住宅计税器"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/btn_dkjsq"
            app:layout_columnWeight="1"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <ImageView
                android:src="@drawable/icon_dkjsq"
                android:layout_width="88dp"
                android:layout_height="88dp" />
            <TextView
                style="@style/mainTabText"
                android:text="贷款计算"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="21dp"

            android:id="@+id/btn_spgx"
            app:layout_columnWeight="1"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <ImageView
                android:src="@drawable/icon_spgx"
                android:layout_width="88dp"
                android:layout_height="88dp" />
            <TextView
                style="@style/mainTabText"
                android:text="笋盘共享"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="21dp"
            android:id="@+id/btn_clp"
            app:layout_columnWeight="1"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <ImageView
                android:src="@drawable/icon_clp"
                android:layout_width="88dp"
                android:layout_height="88dp" />
            <TextView
                style="@style/mainTabText"
                android:text="查楼盘"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="21dp"
            android:id="@+id/btn_lxwm"
            app:layout_columnWeight="1"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <ImageView
                android:src="@drawable/icon_lxwm"
                android:layout_width="88dp"
                android:layout_height="88dp" />
            <TextView
                style="@style/mainTabText"
                android:text="联系我们"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </android.support.v7.widget.GridLayout>



</LinearLayout>
